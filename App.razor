@using Astrodaiva.Blazor.Services
@using Microsoft.AspNetCore.Components.Routing
@using Astrodaiva.Blazor.Shared
@inject AstroDbStore Store
@implements IDisposable

@if (!_bootAttempted)
{
    <div style="padding:16px">
        <div class="card">Loading astro databaseâ€¦</div>
    </div>
}
else
{
    <Router AppAssembly="@typeof(App).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
}

@code {
    private bool _bootAttempted;

    protected override async Task OnInitializedAsync()
    {
        Store.Changed += OnStoreChanged;

        // Kick off a single, app-wide load attempt (same Store instance for all pages).
        await Store.EnsureLoadedAsync();

        _bootAttempted = true;
    }

    private void OnStoreChanged() => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        Store.Changed -= OnStoreChanged;
    }
}
