@page "/"
@inject Astrodaiva.Blazor.Services.AstroDbStore Store
@implements IDisposable
@using Astrodaiva.Data
@using Astrodaiva.Data.Models
@using System.Globalization
@using System.Linq
@using Astrodaiva.Data.Enums
@using Astrodaiva.Blazor.Utils

<div class="card month-header">
    <button type="button" class="nav-btn" @onclick="PrevMonth">â—€</button>
    <div class="month-title">@_current.ToString("MMMM yyyy", CultureInfo.InvariantCulture)</div>
    <button type="button" class="nav-btn" @onclick="NextMonth">â–¶</button>
</div>

@if (_db is null)
{
    <div class="card">Loading astro databaseâ€¦</div>
}
else
{
    <div class="card split-2">
        <!-- LEFT: calendar -->
        <div class="tabs-panel">
            <div class="weekday-header">
                @foreach (var wd in _weekdaysShort)
                {
                    <div class="weekday-cell">@wd</div>
                }
            </div>

            <div class="tabs-strip-grid">
                @foreach (var week in _weeks)
                {
                    foreach (var day in week)
                    {
                        if (day is null)
                        {
                            <div class="daycell-empty"></div>
                        }
                        else
                        {
                            var d = day.Value;
                            var active = d == _selectedDay ? "active" : "";
                            var e = _monthEvents.FirstOrDefault(x => x.Date.Day == d);
                            string? moonDay = e?.MoonDay is not null ? GetMoonDayName((int)e.MoonDay.NewMoonDay).ToLower() : null;
                            var q = GetActivityQuality(e, _selectedActivity);
                            var qClass = GetQualityClass(q);

                            <button @key="d"
                                    type="button"
                                    class="daycard @active"
                                    title="@($"{_current:MMMM yyyy}")"
                                    @onclick="@(() => SelectDay(d))">
                                <span class="daycard-day">@d</span>
                                <span class="daycard-icon">
                                    @if (!string.IsNullOrEmpty(moonDay))
                                    {
                                        <img src="@($"img/zodiac/{moonDay}.png")" alt="@moonDay" />
                                    }
                                </span>
                                <span class="daycard-indicator" title="@GetQualityTitle(q)">
                                    <span class="quality-dot @qClass"></span>
                                </span>
                            </button>
                        }
                    }
                }
            </div>
        </div>

        <!-- RIGHT: desktop-only panel -->
        <div class="tab-content day-layout desktop-right">
            @RightPanelContent()
        </div>
    </div>

    <!-- Activity selector (2 rows Ã— 5 columns) -->
    <div class="card activity-selector">
        <div class="activity-selector__title">Select activity</div>
        <div class="activity-grid">
            @foreach (var a in _activities)
            {
                var sel = a == _selectedActivity ? "selected" : "";
                var activityTitle = EnumText.GetName<ActivitySymbol>((int)a);

                <button type="button"
                        class="activity-btn @sel"
                        title="@activityTitle"
                        @onclick="(() => SelectActivity(a))">
                    <span class="activity-btn__icon">@GetActivityIcon(a)</span>
                    <span class="activity-btn__label">@GetActivityShortLabel(a)</span>
                </button>
            }
        </div>
    </div>

    <!-- MOBILE OVERLAY (CSS decides visibility on â‰¤900px) -->
    <div class="mobile-overlay @( _overlayOpen ? "open" : "" )" aria-hidden="@(!_overlayOpen)">
        <div class="mobile-overlay__backdrop" @onclick="CloseOverlay"></div>
        <div class="mobile-overlay__panel" role="dialog" aria-modal="true">
            <div class="mobile-overlay__header">
                <button type="button" class="overlay-close" @onclick="CloseOverlay">âœ•</button>
            </div>
            <div class="mobile-overlay__body">
                @RightPanelContent()
            </div>
        </div>
    </div>
}

@code {
    private AppDB? _db;
    private List<AstroEvent> _monthEvents = new();
    private DateTime _current = DateTime.Today;
    private int _year;
    private int _month;
    private int _selectedDay;

    // Activity selector state (used for calendar dots)
    private ActivitySymbol _selectedActivity = ActivitySymbol.ImportantTasks;
    private static readonly ActivitySymbol[] _activities = new[]
    {
        ActivitySymbol.Barber,
        ActivitySymbol.Beauty,
        ActivitySymbol.BuyStuff,
        ActivitySymbol.Contracts,
        ActivitySymbol.ImportantTasks,
        ActivitySymbol.Love,
        ActivitySymbol.Meetings,
        ActivitySymbol.NewIdeas,
        ActivitySymbol.Technologies,
        ActivitySymbol.Travel,
    };

    // UI state: no JS â€” CSS shows overlay only on â‰¤900px
    private bool _overlayOpen;

    // Left panel calendar data
    private List<List<int?>> _weeks = new();
    private readonly string[] _weekdaysShort = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" };

    private IEnumerable<AstroEvent> DayEvents
        => _monthEvents.Where(e => e.Date.Day == _selectedDay).OrderBy(e => e.Date);

    private static string GetSignName(int sign) => EnumText.GetName<ZodiacSign>(sign);
    private static string GetMoonDayName(int symbol) => EnumText.GetName<MoonDaySymbol>(symbol);

    private static string BuildZodiacOrTransitionBlock(string planetName, PlanetInZodiac? p)
    {
        if (p is null)
            return "<div class=\"muted\">â€”</div>";

        var newName = GetSignName((int)p.NewZodiacSign);
        var newIcon = newName.ToLowerInvariant();

        // default: show the current (new) sign
        if (!p.IsZodiacTransitioning)
        {
            return $"<div class=\"astro-label\">{planetName} in {newName}</div>" +
                   $"<img alt=\"{planetName} sign\" src=\"img/zodiac/{newIcon}.png\" width=\"64\" height=\"64\" />";
        }

        // transitioning: show previous sign (left) + transition time (center) + new sign (right)
        var prevName = GetSignName((int)p.PreviousZodiacSign);
        var prevIcon = prevName.ToLowerInvariant();
        var timeText = p.TransitionTime.ToString("HH:mm", CultureInfo.InvariantCulture);

        return $@"<div class=""astro-label"">{planetName}: {prevName} â†’ {newName}</div>
<div class=""astro-transition"" title=""Transition {timeText}"">
  <img alt=""Previous {planetName} sign"" src=""img/zodiac/{prevIcon}.png"" />
  <span class=""astro-transition__time"">{timeText}</span>
  <img alt=""New {planetName} sign"" src=""img/zodiac/{newIcon}.png"" />
</div>";
    }

    protected override async Task OnInitializedAsync()
    {
        Store.Changed += OnStoreChanged;
        _db = await Store.EnsureLoadedAsync();
        _year = _current.Year;
        _month = _current.Month;
        _selectedDay = _current.Day;
        RecomputeMonth();
        await InvokeAsync(StateHasChanged);
    }

    private void OnStoreChanged()
    {
        _db = Store.Db;
        RecomputeMonth();
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Store.Changed -= OnStoreChanged;
    }

    private void RecomputeMonth()
    {
        RecomputeMonthEvents();
        BuildWeeks();
        var dim = DateTime.DaysInMonth(_year, _month);
        if (_selectedDay < 1) _selectedDay = 1;
        if (_selectedDay > dim) _selectedDay = dim;
        _current = new DateTime(_year, _month, _selectedDay);
    }

    private void RecomputeMonthEvents()
    {
        _monthEvents = _db?.AstroEventsDB?
            .Where(x => x.Date.Year == _year && x.Date.Month == _month)
            .OrderBy(x => x.Date)
            .ToList() ?? new List<AstroEvent>();
    }

    // Build Monday-first 7-column weeks
    private void BuildWeeks()
    {
        _weeks.Clear();
        var firstOfMonth = new DateTime(_year, _month, 1);
        var dim = DateTime.DaysInMonth(_year, _month);

        int mondayFirstIndex(int dow) => ((dow - (int)DayOfWeek.Monday) + 7) % 7;
        int startOffset = mondayFirstIndex((int)firstOfMonth.DayOfWeek);

        var days = Enumerable.Repeat<int?>(null, startOffset)
                             .Concat(Enumerable.Range(1, dim).Select(i => (int?)i))
                             .ToList();

        int pad = (7 - (days.Count % 7)) % 7;
        if (pad > 0) days.AddRange(Enumerable.Repeat<int?>(null, pad));

        for (int i = 0; i < days.Count; i += 7)
            _weeks.Add(days.Skip(i).Take(7).ToList());
    }

    private async Task SelectDay(int day)
    {
        _selectedDay = day;
        _current = new DateTime(_year, _month, _selectedDay);

        // Always set true; CSS shows only on â‰¤900px
        _overlayOpen = true;

        await InvokeAsync(StateHasChanged);
    }

    private async Task PrevMonth()
    {
        var d = new DateTime(_year, _month, 1).AddMonths(-1);
        _year = d.Year; _month = d.Month; _selectedDay = 1;
        RecomputeMonth();
        _overlayOpen = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task NextMonth()
    {
        var d = new DateTime(_year, _month, 1).AddMonths(1);
        _year = d.Year; _month = d.Month; _selectedDay = 1;
        RecomputeMonth();
        _overlayOpen = false;
        await InvokeAsync(StateHasChanged);
    }

    private void CloseOverlay() => _overlayOpen = false;

    private void SelectActivity(ActivitySymbol a)
    {
        _selectedActivity = a;
        // Update dots immediately
        InvokeAsync(StateHasChanged);
    }

