    private static ActivityQuality GetActivityQuality(AstroEvent? e, ActivitySymbol a)
    {
        if (e is null) return ActivityQuality.None;
        return a switch
        {
            ActivitySymbol.Barber => e.Barber,
            ActivitySymbol.Beauty => e.Beauty,
            ActivitySymbol.BuyStuff => e.Buystuff,
            ActivitySymbol.Contracts => e.Contracts,
            ActivitySymbol.ImportantTasks => e.ImportantTasks,
            ActivitySymbol.Love => e.Love,
            ActivitySymbol.Meetings => e.Meetings,
            ActivitySymbol.NewIdeas => e.NewIdeas,
            ActivitySymbol.Technologies => e.Tech,
            ActivitySymbol.Travel => e.Travel,
            _ => ActivityQuality.None
        };
    }

    private static string GetQualityClass(ActivityQuality q) => q switch
    {
        ActivityQuality.Good => "good",
        ActivityQuality.Bad => "bad",
        ActivityQuality.Neutral => "neutral",
        _ => "none"
    };

    private string GetQualityTitle(ActivityQuality q)
        => q switch
        {
            ActivityQuality.Good => $"{GetActivityShortLabel(_selectedActivity)}: Good",
            ActivityQuality.Bad => $"{GetActivityShortLabel(_selectedActivity)}: Bad",
            ActivityQuality.Neutral => $"{GetActivityShortLabel(_selectedActivity)}: Neutral",
            _ => $"{GetActivityShortLabel(_selectedActivity)}: â€”"
        };
    
    private string BuildGoodBadTagsHtml(AstroEvent? e)
    {
        if (e is null) return "";

        var tags = _activities
            .Select(a => new { A = a, Q = GetActivityQuality(e, a) })
            .Where(x => x.Q == ActivityQuality.Good || x.Q == ActivityQuality.Bad)
            .Select(x =>
            {
                var cls = x.Q == ActivityQuality.Good ? "tag-good" : "tag-bad";
                var title = EnumText.GetName<ActivitySymbol>((int)x.A);
                var icon = GetActivityIcon(x.A);
                return $@"<div class=""gb-tag {cls}"" title=""{title}"">
                        <span class=""gb-tag__icon"">{icon}</span>
                        <span class=""gb-tag__label"">{title}</span>
                      </div>";
            })
            .ToList();

        if (tags.Count == 0)
            return @"<div class=""gb-tags-empty muted"">No Good/Bad tags for this day.</div>";

        return $@"<div class=""gb-tags"">{string.Join("", tags)}</div>";
    }


    // Shared right panel content
    private RenderFragment RightPanelContent() => __builder =>
    {
        __builder.AddMarkupContent(0, $"<div class=\"day-layout month-row\">{_current.ToString("MMMM yyyy", CultureInfo.InvariantCulture)}</div>");
        __builder.AddMarkupContent(1, $"<div class=\"day-layout daynum-row\">{_current.Day}</div>");
        __builder.AddMarkupContent(2, $"<div class=\"day-layout weekday-row\">{_current.ToString("dddd", CultureInfo.InvariantCulture)}</div>");

        var mo = _monthEvents.FirstOrDefault(x => x.Date.Date == _current.Date);

// Moon-day timeline (previous -> new, with animated marker(s) for transition time(s))
if (mo?.MoonDay is not null)
{
    var md = mo.MoonDay;

    static double ToDayPercent(DateTime dt)
    {
        // map 00:00:00 => 0%, 23:59:59 => 100%
        var seconds = dt.TimeOfDay.TotalSeconds;
        var pct = (seconds / 86399.0) * 100.0;
        if (pct < 0) pct = 0;
        if (pct > 100) pct = 100;
        return pct;
    }

    var prevIcon = GetMoonDayName(md.PreviousMoonDay).ToLower();
    var newIcon = GetMoonDayName(md.NewMoonDay).ToLower();
    var prevTitle = GetMoonDayName(md.PreviousMoonDay);
    var newTitle = GetMoonDayName(md.NewMoonDay);

    var endPct = ToDayPercent(md.TransitionTime);
    var endTimeText = md.TransitionTime.ToString("HH:mm", CultureInfo.InvariantCulture);

    var markersHtml = $@"<div class=""md-marker md-marker--final"" style=""--target:{endPct:F2}%;"" title=""Transition: {endTimeText}""><div class=""md-marker-bar""></div><div class=""md-marker-label"">{endTimeText}</div></div>";

    if (md.IsTripleMoonDay)
    {
        var midIcon = GetMoonDayName(md.MiddleMoonDay).ToLower();
        var midTitle = GetMoonDayName(md.MiddleMoonDay);

        var midPct = ToDayPercent(md.MiddleMoonDayTransitionTime);
        var midTimeText = md.MiddleMoonDayTransitionTime.ToString("HH:mm", CultureInfo.InvariantCulture);

        markersHtml =
            $@"<div class=""md-marker md-marker--mid"" style=""--target:{midPct:F2}%;"" title=""Middle transition: {midTimeText}""><div class=""md-marker-bar""></div><div class=""md-marker-label"">{midTimeText}</div></div>" +
            $@"<div class=""md-marker md-marker--final"" style=""--target:{endPct:F2}%;"" title=""Transition: {endTimeText}""><div class=""md-marker-bar""></div><div class=""md-marker-label"">{endTimeText}</div></div>" +
            $@"<img class=""md-mini"" alt=""Middle Moon Day"" src=""img/zodiac/{midIcon}.png"" style=""--target:{midPct:F2}%;"" title=""{midTitle}"" />";
    }

    var moonDayHtml = $@"
        <div class=""day-layout moonday-row"">
            <div class=""md-timeline"">
                <div class=""md-side md-side--left"" title=""{prevTitle}"">
                    <img alt=""Previous Moon Day"" src=""img/zodiac/{prevIcon}.png"" />
                </div>

                <div class=""md-line-wrap"">
                    <div class=""md-line""></div>
                    {markersHtml}
                </div>

                <div class=""md-side md-side--right"" title=""{newTitle}"">
                    <img alt=""New Moon Day"" src=""img/zodiac/{newIcon}.png"" />
                </div>
            </div>
        </div>";

    __builder.AddMarkupContent(3, moonDayHtml);
}
else
