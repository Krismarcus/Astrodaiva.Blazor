    {
        ActivitySymbol.Barber => "ðŸ’‡",
        ActivitySymbol.Beauty => "ðŸ’„",
        ActivitySymbol.BuyStuff => "ðŸ›ï¸",
        ActivitySymbol.Contracts => "ðŸ“",
        ActivitySymbol.ImportantTasks => "âœ…",
        ActivitySymbol.Love => "â¤ï¸",
        ActivitySymbol.Meetings => "ðŸ¤",
        ActivitySymbol.NewIdeas => "ðŸ’¡",
        ActivitySymbol.Technologies => "ðŸ’»",
        ActivitySymbol.Travel => "âœˆï¸",
        _ => "â€¢"
    };

    private static string GetActivityShortLabel(ActivitySymbol a) => a switch
    {
        ActivitySymbol.BuyStuff => "Buy",
        ActivitySymbol.ImportantTasks => "Tasks",
        ActivitySymbol.NewIdeas => "Ideas",
        ActivitySymbol.Technologies => "Tech",
        ActivitySymbol.Meetings => "Meet",
        ActivitySymbol.Contracts => "Contracts",
        ActivitySymbol.Barber => "Barber",
        ActivitySymbol.Beauty => "Beauty",
        ActivitySymbol.Love => "Love",
        ActivitySymbol.Travel => "Travel",
        _ => EnumText.GetName<ActivitySymbol>((int)a)
    };

    private static ActivityQuality GetActivityQuality(AstroEvent? e, ActivitySymbol a)
    {
        if (e is null) return ActivityQuality.None;
        return a switch
        {
            ActivitySymbol.Barber => e.Barber,
            ActivitySymbol.Beauty => e.Beauty,
            ActivitySymbol.BuyStuff => e.Buystuff,
            ActivitySymbol.Contracts => e.Contracts,
            ActivitySymbol.ImportantTasks => e.ImportantTasks,
            ActivitySymbol.Love => e.Love,
            ActivitySymbol.Meetings => e.Meetings,
            ActivitySymbol.NewIdeas => e.NewIdeas,
            ActivitySymbol.Technologies => e.Tech,
            ActivitySymbol.Travel => e.Travel,
            _ => ActivityQuality.None
        };
    }

    private static string GetQualityClass(ActivityQuality q) => q switch
    {
        ActivityQuality.Good => "good",
        ActivityQuality.Bad => "bad",
        ActivityQuality.Neutral => "neutral",
        _ => "none"
    };

    private string GetQualityTitle(ActivityQuality q)
        => q switch
        {
            ActivityQuality.Good => $"{GetActivityShortLabel(_selectedActivity)}: Good",
            ActivityQuality.Bad => $"{GetActivityShortLabel(_selectedActivity)}: Bad",
            ActivityQuality.Neutral => $"{GetActivityShortLabel(_selectedActivity)}: Neutral",
            _ => $"{GetActivityShortLabel(_selectedActivity)}: â€”"
        };
    
    private string BuildGoodBadTagsHtml(AstroEvent? e)
    {
        if (e is null) return "";

        var tags = _activities
            .Select(a => new { A = a, Q = GetActivityQuality(e, a) })
            .Where(x => x.Q == ActivityQuality.Good || x.Q == ActivityQuality.Bad)
            .Select(x =>
            {
                var cls = x.Q == ActivityQuality.Good ? "tag-good" : "tag-bad";
                var title = EnumText.GetName<ActivitySymbol>((int)x.A);
                var icon = GetActivityIcon(x.A);
                return $@"<div class=""gb-tag {cls}"" title=""{title}"">
                        <span class=""gb-tag__icon"">{icon}</span>
                        <span class=""gb-tag__label"">{title}</span>
                      </div>";
            })
            .ToList();

        if (tags.Count == 0)
            return @"<div class=""gb-tags-empty muted"">No Good/Bad tags for this day.</div>";

        return $@"<div class=""gb-tags"">{string.Join("", tags)}</div>";
    }



    // Shared right panel content (Razor template â€” safer than manual __builder markup)
    private RenderFragment RightPanelContent() => @<div class="day-layout">
        <div class="month-row">@_current.ToString("MMMM yyyy", CultureInfo.InvariantCulture)</div>
        <div class="daynum-row">@_current.Day</div>
        <div class="weekday-row">@_current.ToString("dddd", CultureInfo.InvariantCulture)</div>

        @{
            var mo = _monthEvents.FirstOrDefault(x => x.Date.Date == _current.Date);

            double ToDayPercent(DateTime dt)
            {
                var seconds = dt.TimeOfDay.TotalSeconds;
                var pct = (seconds / 86399.0) * 100.0;
                if (pct < 0) pct = 0;
                if (pct > 100) pct = 100;
                return pct;
            }
        }

        @* Moon-day timeline *@
        @if (mo?.MoonDay is not null)
        {
            var md = mo.MoonDay!;

            var prevIcon = GetMoonDayName(md.PreviousMoonDay).ToLower();
            var newIcon  = GetMoonDayName(md.NewMoonDay).ToLower();
            var prevTitle = GetMoonDayName(md.PreviousMoonDay);
            var newTitle  = GetMoonDayName(md.NewMoonDay);

            var endPct = ToDayPercent(md.TransitionTime);
            var endTimeText = md.TransitionTime.ToString("HH:mm", CultureInfo.InvariantCulture);

            <div class="moonday-row">
                <div class="astro-frame astro-frame--moonday">
                    <div class="md-timeline">
                        <div class="md-side md-side--left" title="@prevTitle">
                            <img alt="Previous Moon Day" src="@($"img/zodiac/{prevIcon}.png")" />
                        </div>

                        <div class="md-line-wrap">
                            <div class="md-line"></div>

                            @if (md.IsTripleMoonDay)
                            {
                                var midPct = ToDayPercent(md.MiddleMoonDayTransitionTime);
                                var midTimeText = md.MiddleMoonDayTransitionTime.ToString("HH:mm", CultureInfo.InvariantCulture);
                                var midIcon = GetMoonDayName(md.MiddleMoonDay).ToLower();
                                var midTitle = GetMoonDayName(md.MiddleMoonDay);

                                <div class="md-marker md-marker--mid" style="--target:@($"{midPct:F2}%")" title="@($"Middle transition: {midTimeText}")">
                                    <div class="md-marker-bar"></div>
                                    <div class="md-marker-label">@midTimeText</div>
                                </div>

                                <img class="md-mini"
                                     alt="Middle Moon Day"
                                     src="@($"img/zodiac/{midIcon}.png")"
                                     style="--target:@($"{midPct:F2}%")"
                                     title="@midTitle" />
                            }

                            <div class="md-marker md-marker--final" style="--target:@($"{endPct:F2}%")" title="@($"Transition: {endTimeText}")">
                                <div class="md-marker-bar"></div>
                                <div class="md-marker-label">@endTimeText</div>
                            </div>
                        </div>

                        <div class="md-side md-side--right" title="@newTitle">
                            <img alt="New Moon Day" src="@($"img/zodiac/{newIcon}.png")" />
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="moonday-row"><span class="muted">No Moon-day symbol</span></div>
        }

        @{
            var first = DayEvents.FirstOrDefault();

            var sunBlock     = BuildZodiacOrTransitionBlock("Sun", first?.SunInZodiac);
            var moonBlock    = BuildZodiacOrTransitionBlock("Moon", first?.MoonInZodiac);
            var mercuryBlock = BuildZodiacOrTransitionBlock("Mercury", first?.MercuryInZodiac);
            var venusBlock   = BuildZodiacOrTransitionBlock("Venus", first?.VenusInZodiac);
            var marsBlock    = BuildZodiacOrTransitionBlock("Mars", first?.MarsInZodiac);
        }

        @* Planets-in-zodiac frame *@
        <div class="astro-frame astro-frame--planets">
            <div class="planet-grid planet-grid--top">
                <div class="planet-cell">
                    <img class="planet-icon" alt="Sun" src="img/zodiac/sun.png" width="40" height="40" />
                    <div class="planet-zodiac">@((MarkupString)sunBlock)</div>
                </div>
                <div class="planet-cell">
                    <img class="planet-icon" alt="Moon" src="img/zodiac/moon.png" width="40" height="40" />
                    <div class="planet-zodiac">@((MarkupString)moonBlock)</div>
                </div>
            </div>

            <div class="planet-grid planet-grid--bottom">
                <div class="planet-cell">
                    <img class="planet-icon" alt="Mercury" src="img/zodiac/mercury.png" width="40" height="40" />
                    <div class="planet-zodiac">@((MarkupString)mercuryBlock)</div>
                </div>
                <div class="planet-cell">
                    <img class="planet-icon" alt="Venus" src="img/zodiac/venus.png" width="40" height="40" />
                    <div class="planet-zodiac">@((MarkupString)venusBlock)</div>
                </div>
                <div class="planet-cell">
                    <img class="planet-icon" alt="Mars" src="img/zodiac/mars.png" width="40" height="40" />
                    <div class="planet-zodiac">@((MarkupString)marsBlock)</div>
                </div>
            </div>
        </div>

        @* Events frame *@
        @if (DayEvents.Any())
        {
            var items = DayEvents
                .Select(e => !string.IsNullOrWhiteSpace(e.EventText)
                    ? e.EventText
                    : (e.PlanetEvents is { Count: > 0 }
                        ? string.Join(", ", e.PlanetEvents.Select(pe => $"{pe.Planet1} {pe.AspectSymbol} {pe.Planet2}"))
                        : ""))
                .Where(s => !string.IsNullOrWhiteSpace(s))
                .ToList();

            if (items.Count > 0)
            {
                <div class="astro-frame astro-frame--events">
                    <ul class="events-list">
                        @foreach (var t in items)
                        {
                            <li>@t</li>
                        }
                    </ul>
                </div>
            }
        }

        @* Good/Bad tags (bottom) *@
        @{
            var tagsHtml = BuildGoodBadTagsHtml(first);
        }
        <div class="gb-tags-wrap">@((MarkupString)tagsHtml)</div>

    </div>;
}
